<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.bakinghelper.dao.DetailDao" >
    <resultMap id="BaseResultMap" type="com.qf.bakinghelper.entity.Type" >
        <id column="type_id" property="typeId" jdbcType="INTEGER"></id>
        <result column="type_name" property="typeName" jdbcType="VARCHAR"></result>
        <collection property="details" ofType="com.qf.bakinghelper.entity.Detail">
            <id column="d_id" property="dId" jdbcType="INTEGER" />
            <result column="detail_name" property="detailName" jdbcType="VARCHAR" />
            <result column="t_id" property="tId" jdbcType="INTEGER" />
        </collection>
    </resultMap>

    <select id="detailList"  resultMap="BaseResultMap">
   SELECT type_name,detail_name FROM type LEFT JOIN type_detail ON type.type_id = type_detail.t_id;
    </select>

</mapper>